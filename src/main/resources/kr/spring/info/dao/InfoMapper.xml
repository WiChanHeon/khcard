<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.info.dao.InfoMapper">  
	<select id="getSList" resultType="infoCommand">
		
		SELECT
		  info_id,
		  info_name,
		  info_stitle,
		  <![CDATA[
		  REPLACE(REPLACE(REPLACE(info_scontent,'\r\n','<br>'),'\n','<br>'),'\r','<br>') info_scontent,
		  ]]>
		  info_img,
		  cp_afee
		FROM f_info
			<!-- <where>
	  			<if test="info_flag != ''">
	  				info_flag = ${info_flag}
	  			</if>
  			</where> -->
			
	</select>

</mapper>